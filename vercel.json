{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@now/next"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Content-Security-Policy", "value": "script-src 'self'"},
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" }
      ]
    },
    {
      "source": "/api/rss",
      "headers": [
        { "key": "Cache-Control", "value": "s-maxage=86400 stale-while-revalidate stale-if-error" }
      ]
    }
  ],
  "redirects": [
    { "source": "/posts", "destination": "https://charlesharri.es/blog" },
    { "source": "/posts/(.*)", "destination": "https://charlesharri.es/blog/$1" }
  ],
  "rewrites": [
    { "source": "/feed.xml", "destination": "/_next/static/feed.xml" }
  ]
}